<div class="authform card">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3 id="id">NovelShare Public Library</h3>


    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to 'Register', new_registration_path(resource_name)  %>
      <% end -%>
<!--       <%= f.label :email %> -->
      <h1>Name</h1>
      <%= f.text_field :username, :autofocus => true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to "Forgot?", new_password_path(resource_name) %>
      <% end -%>
<!--       <%= f.label :password %> -->
    <h1>Secret</h1>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
      <%= f.submit 'Checkin', :class => 'button right' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %> Don't Ask Again.
          </label>
        </div>
      <% end -%>
  <% end %>
</div>
